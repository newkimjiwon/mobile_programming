<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnDatePicker" android:text="날짜 선택" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnTimePicker" android:text="시간 선택" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnAlert" android:text="기본 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnAlertWithHandler" android:text="이벤트 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnListDialog" android:text="리스트 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnMultiChoice" android:text="다중 선택 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnSingleChoice" android:text="단일 선택 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnCancelableDialog" android:text="닫힘 제어 알림창" android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>
